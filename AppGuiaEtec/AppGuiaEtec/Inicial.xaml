<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaEtec.Inicial"
             Title="Desenvolvimento de Sistemas">
    <ContentPage.Content>
        <ScrollView>
           <StackLayout Padding="10">

                <Label Text="Nesse aplicativo feito por nós, você pode obter mais informações sobre o nosso curso!"
                       Style="{StaticResource textoCentralizado}"/>

                <Label Text="Como o nosso curso é integrado ao Ensino Médio, ele possui a duração de 3 anos. O curso tem como objetivo construir softwares, codificar e depurar programas, desenvolver sistemas, projetar, implementar e utilizar bancos de dados, além da criação de sites."
                       Style="{StaticResource textoCentralizado}" />
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>