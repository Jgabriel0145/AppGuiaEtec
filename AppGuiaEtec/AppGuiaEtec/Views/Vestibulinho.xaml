<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaEtec.Views.Vestibulinho"
             Title="Vestibulinho">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="FIQUE ATENTO ÀS DATAS, ACESSE O SITE ABAIXO:"
                   HorizontalTextAlignment="Center" FontAttributes="Bold" Margin="10" FontSize="Title"
                   TextColor="{AppThemeBinding Dark=White, Light=Black}"/>

            <Button Text="Inscreva-se" Style="{StaticResource BotaoVermelho}" x:Name="btnInscrever" 
                    Clicked="btnInscrever_Clicked" Margin="10"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>