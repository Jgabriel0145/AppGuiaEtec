<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaEtec.MainPage">

    <MasterDetailPage.Master>

        <ContentPage Title="Menu">
            <Grid BackgroundColor="#121111" ColumnDefinitions="*" RowDefinitions="160, *, 160">

                <StackLayout Grid.Column="0" HorizontalOptions="FillAndExpand" 
                             BackgroundColor="#121111"
                             Padding="10"
                             Margin="10">

                    <Image Source="logo.png" Aspect="AspectFit"/>
                </StackLayout>

                <StackLayout Grid.Row="1" Spacing="15"
                             BackgroundColor="#121111"
                             Padding="10"
                             Margin="10">

                    <Button Text="Inicial" Style="{StaticResource BotaoVermlho}" Clicked="Open_Inicial"/>
                    <Button Text="Primeiro Ano" Style="{StaticResource BotaoCinza}" Clicked="Open_Primeiro"/>
                    <Button Text="Segundo Ano" Style="{StaticResource BotaoCinza}" Clicked="Open_Segundo"/>
                    <Button Text="Terceiro Ano" Style="{StaticResource BotaoCinza}" Clicked="Open_Terceiro"/>
                    <Button Text="Vestibulinho" Style="{StaticResource BotaoVermlho}" Clicked="Open_Vestibulinho"/>
                    <Button Text="Contato" Style="{StaticResource BotaoVermlho}" Clicked="Open_Contato"/>

                </StackLayout>

                <StackLayout Grid.Column="0" HorizontalOptions="FillAndExpand"
                             BackgroundColor="#121111"
                             Padding="10"
                             Margin="10">

                    <Image Source="logo.png" Aspect="AspectFit"/>
                </StackLayout>

            </Grid>
        </ContentPage>

    </MasterDetailPage.Master>
</MasterDetailPage>
